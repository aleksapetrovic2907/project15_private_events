<div class="my-5 row">
  <div class="col">
    <h2><%= @event.title %></h2>
  </div>
  <% if user_signed_in? %>
    <% if current_user.id == @event.creator_id %>
      <div class="col">
        <%= link_to "Remove", @event, method: :delete, class:"btn btn-outline-primary float-end mx-2"%>
        <%= link_to "Edit Event", edit_event_path(@event), class:"btn btn-primary float-end"%>
      </div>
    <% end %>
  <% end %>
</div>
