<div class="my-5 row">
  <div class="col">
    <h2>Upcoming Events</h2>
  </div>
  <div class="col">
    <%= link_to "Create Event", new_event_path, class:"btn btn-primary float-end"%>
  </div>
</div>
<div class="row">
  <% @events.each do |event| %>
    <div class="col-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= event.location %></h6>
          <p class="card-text"><%= event.description %></p>
          <%= link_to 'Learn More', event_path(event), class: "btn btn-outline-primary btn-block" %>
        </div>
      </div>
      
      
      
    </div>
  <% end %>
  <h3 class="my-5">Past Events</h3>
